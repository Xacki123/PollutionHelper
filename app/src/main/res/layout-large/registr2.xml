<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:background="@color/Head"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoText="true"
            android:gravity="center"
            android:shadowColor="@color/textC"
            android:text="@string/page3"
            android:textColor="@color/textC"
            android:textSize="36sp"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">

        <ImageView
            android:id="@+id/AvatarIm"
            android:layout_width="98dp"
            android:layout_height="98dp"

            android:layout_marginLeft="120dp"
            android:layout_marginTop="20dp"
            android:src="@drawable/avatar011" />

        <Spinner
            android:id="@+id/spinner1"
            android:layout_width="225dp"
            android:layout_height="90dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"
            android:backgroundTint="@color/textC"
            android:dropDownSelector="@color/textC"


            android:spinnerMode="dialog" />

    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout6"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextAppearance="@style/MyErrorText"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout4"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textC"
            android:hint="Почта"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            android:textSize="24sp"
            android:theme="@style/MyEditText"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/textInputLayout5"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextAppearance="@style/MyErrorText"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout6"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="@color/textC"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/pass"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textC"
            android:hint="Пароль"
            android:inputType="textPassword"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            android:textSize="24sp"
            android:theme="@style/MyEditText"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EdName"
        android:layout_width="375dp"
        android:layout_height="75dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextAppearance="@style/MyErrorText"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textInputLayout5"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textC"
            android:hint="Имя"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            android:textSize="24sp"
            android:theme="@style/MyEditText"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EdPhone"
        android:layout_width="375dp"
        android:layout_height="105dp"
        android:layout_gravity="center"
        android:layout_marginTop="48dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextAppearance="@style/MyErrorText"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdName"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Phone1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textC"
            android:hint="Телефон"
            android:inputType="phone"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            android:textSize="24sp"
            android:theme="@style/MyEditText"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC" />
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="98dp"
        android:layout_gravity="center"
        android:background="@color/Head1"
        android:onClick="reg"
        android:text="Регистрация"
        android:textColor="@color/textC"
        android:textSize="27sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>