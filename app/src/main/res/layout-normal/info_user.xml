<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/BG">


    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@color/Head"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:autoText="true"
            android:gravity="center"
            android:shadowColor="@color/textC"
            android:text="@string/page5"
            android:textColor="@color/textC"
            android:textSize="24sp"
            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout3">


        <ImageView
            android:id="@+id/AvatarIm"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="80dp"
            android:layout_marginTop="20dp"


            android:src="@drawable/avatar011" />


        <Spinner
            android:id="@+id/spinner2"
            android:layout_width="151dp"
            android:layout_height="60dp"
            android:layout_gravity="top|left"

            android:layout_marginStart="40dp"
            android:layout_marginTop="25dp"


            android:backgroundTint="@color/textC"
            android:dropDownSelector="@color/textC"
            android:spinnerMode="dialog" />


    </LinearLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/Edmail2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="70dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Mail2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:cursorVisible="false"
            android:focusable="false"
            android:hint="Почта"
            android:longClickable="false"
            android:backgroundTint="@color/textC"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC"
            android:textSize="16sp" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EdName2"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/Edmail2"
        app:errorTextAppearance="@style/MyErrorText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Name2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Имя"
            android:backgroundTint="@color/textC"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC"
            android:textSize="16sp"
            android:theme="@style/MyEditText"/>
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/EdPhone2"
        android:layout_width="250dp"
        android:layout_height="70dp"
        android:layout_gravity="center"
        android:layout_marginTop="45dp"
        android:textColorHint="@color/textC"
        app:boxStrokeColor="@color/textC"
        app:counterEnabled="true"
        app:counterMaxLength="11"
        app:counterOverflowTextColor="@color/textC"
        app:counterTextColor="@color/textC"
        app:endIconTint="@color/textC"
        app:errorTextColor="@color/textC"
        app:helperTextTextColor="@color/textC"
        app:hintTextColor="@color/textC"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/EdName2"
        app:placeholderTextColor="@color/textC"
        app:prefixTextColor="@color/textC"
        app:suffixTextColor="@color/textC"
        app:errorTextAppearance="@style/MyErrorText">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/Phone2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/textC"
            android:hint="Телефон"
            android:inputType="phone"
            android:textColor="@color/textC"
            android:textColorHighlight="@color/textC"
            android:textColorHint="@color/textC"
            android:textColorLink="@color/textC"
            android:textSize="16sp"
            app:boxStrokeColor="@color/textC"
            app:hintTextColor="@color/textC"
            android:theme="@style/MyEditText"/>
    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/button2"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_gravity="center"
        android:background="@color/Head1"
        android:onClick="saveUser"
        android:text="Сохранить"
        android:textColor="@color/textC"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>